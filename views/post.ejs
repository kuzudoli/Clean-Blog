<!DOCTYPE html>
<html lang="en">

<%- include("partials/_header") -%>

<body>

  <!-- Navigation -->
  <%- include("partials/_nav") -%>

  <!-- Page Header -->
  <header class="masthead" style="background-image: url('img/post-bg.jpg')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="post-heading">
            <h1><%= post.title %></h1>
            <p style="color: rgba(255,255,255,0.3);"><%= post.dateCreated %></p>
            <a href="/posts/edit/<%=post._id%>" class="btn btn-success">Update</a>
            <a href="/posts/<%=post._id%>?_method=DELETE" class="btn btn-danger" onclick="return confirm('Are you confirm?')">Delete</a>
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Post Content -->
  <article>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <%= post.detail %>
        </div>
      </div>
    </div>
  </article>

  <hr>

  <!-- Footer -->
  <%- include("partials/_footer") -%>

  <!-- Bootstrap core JavaScript -->
  <script src="vendor/jquery/jquery.min.js"></script>
  <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

  <!-- Custom scripts for this template -->
  <script src="js/clean-blog.min.js"></script>

</body>

</html>
